<html>
  <title>PPST</title>
  <head>
     <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://fonts.googleapis.com/css?family=Nunito:900" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <link href="https://fonts.googleapis.com/css?family=Nunito:700" rel="stylesheet">
   <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <link href="https://fonts.googleapis.com/css?family=Fredoka+One" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
   <link href="https://fonts.googleapis.com/css?family=Cabin" rel="stylesheet">
  </head>
  
  <body>
    
    <div class="row">
      
      <div class="col col-xl-3 col-lg-2 col-md-3 col-sm-3 col-xs-12" style="background-color:#2d2d2d;
                                                                            height:100%;
                                                                            text-align:center;
                                                                            font-family: 'Cabin', sans-serif;
                                                                            position:fixed; 
                                                                            border-right:solid 1px #ccc
                                                                            ">
        
       <div class="col col-xl-12 col-lg-12 col-md-3 col-sm-3 col-xs-12" style=";background-color:#286090;width:107%">
          <h2 style="color: white"><strong>PPTS</strong></h2>
          <p style="font-weight: lighter;font-size: 14px;color: #ccc">पालघर पोलीस  ट्रान्सफर सिस्टिम </p>
        </div>


        <img src="https://en.indietrainers.com/media/images/empty-profile.png" alt="" 
             style="height:100px;width:100px;border-radius:;border:solid 10px #2d2d2d"><br>
        
   <a type="button" class="btn btn-primary" style="opacity:0.9;
                                                   margin-top:0px;
                                                   background-color:rgba(40,96,144,0.7);
                                                  
                                                   ">Add Profile Image</a>
     
        
        <ul class="list-group" style="text-align:center;margin-left:18px;margin-top:20px">
  <li class="list-group-item list-group-item-info" style="width:100%"><strong style="float:left">*Name / नाॉव : </strong><br>
    <span style="font-size:16px;color:black"><%=currentUser.fullName%></span></li>
   <li class="list-group-item list-group-item-info"><strong style="float:left">*Phone No. / फोन : </strong><br>
    <span style="font-size:17px;color:black"><%=currentUser.username%></span></li>
   
   <li class="list-group-item list-group-item-info"><strong style="float:left">*Branch / शाखा : </strong><br>
    <span style="font-size:17px;color:black"><%=currentUser.currentBranch.BranchName%></span></li>
          <li class="list-group-item list-group">
      <a type="button" class="btn btn-success">View complete profile <i class="fa fa-arrow-right"></i></a>
</li>  

</ul>
        
        <div style="">
          <div class="btn-group-vertical" >
 <button id="Apply" type="button" class="btn btn-primary">Apply <i class="fa fa-arrow-right"></i></button>
<button type="button" class="btn btn-primary">Status <i class="fa fa-user-cog"></i></button>
<button type="button" class="btn btn-primary">Notifications <i class="fa fa-bell"></i></button>
<button type="button" class="btn btn-danger">Logout <i class="fa fa-sign-out"></i></button>
</div>
        </div>
        
   <script>
     $('#Apply').click(function(){
   window.location.href='/apply';
})
        </script>     
        
      </div>
      
        <div class="col col-xl-9 col-lg-10 col-md-9 col-sm-9 col-xs-12" style="background-color:;
                                                                            height:1200px;
                                                                            float:right;
                                                                            font-family: 'Cabin', sans-serif;
                                                                          ">
          <h1><strong>Your request status</strong></h1> <br>
          
       
        <div class="container">
          <div class="progress"style="height:2px;margin-right:50px;border-radius:0px" >
  <div class="progress-bar progress-bar-success " role="progressbar"
  aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width:50%;">
    

  </div>
</div> 
   


  <div class="col col-lg-12" style="text-align:center;margin-top:-35px">
    
    <span style="float:left;font-size:30px;color:#5CB85C;margin-left:-30px"><i class="fa fa-circle"></i></span>
     <span style="font-size:30px;color:#5CB85C;margin-left:-30px"><i class="fa fa-circle"></i></span>
     <span style="float:right;font-size:30px;margin-left:-30px"><i class="fa fa-circle"></i>  </span>
          </div>          
          
  <div class="col col-lg-12" style="text-align:center">
    
    <span style="float:left;font-size:16px"> <strong>Request Initiated <br><span style="color: grey">( 16 June 2018 )</span></strong></span>
     <span style="font-size:16px"><strong>Request sent successfully</strong></span>
     <span style="float:right;font-size:16px"><strong >Request approved</strong>  </span>
          </div>        
          
        </div>

           

         

       
        
      
     <div class="col col-lg-3">
          



       
       <div class="alert alert-success" role="alert" style="margin-top:10px">
     <table class="table" style="font-size: 12px">
    <thead>
      <tr>
        <th>Preference</th>
        <th>Branch</th>   
      </tr>
    </thead>
    <tbody>
      <%requests.forEach(function(request){%>
      <tr>
        <td><%=request.preference%></td>
        <td><%=request.requestedBranch.BranchName%></td>
      </tr>  
       <% })%>    
    </tbody>
  </table>
         
</div>      

      

      </div>
      <div class="col col-lg-12">
           <div class="alert alert-danger" style="background-color: red;color: white">
      Your request is still in process <i class="fa fa-exclamation"></i>
      
    </div> 
      </div>
</div>

 
      
    </div>
    
    
  </body>
  
</html>

 




