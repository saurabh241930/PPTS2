                                                                            font-family: 'Cabin', sans-serif;
                                                                           ">
         
         <form class="form-inline my-2 my-lg-0 pull-right" style="text-align: center;">
      <input class="form-control mr-sm-2" name="search" type="search" placeholder="Search" aria-label="Search">
      <button class="btn btn-success my-2 my-sm-0 " type="submit">Search</button>
    </form>
      <div class="col col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12" >

<table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Requested Branch</th>
        <th>Preference</th>
        <th>Approval</th>
      </tr>
    </thead>
      <tbody id="table-body">
        <div class="col-lg-12">
          <% if( noMatch !== null){%>
          <h3><%= noMatch %></h3>
          <%}%>
        </div>
      <%requests.forEach(function(request){%>
        <tr class="tr">
          <td><%=request.fullName%></td>
          <td><%=request.requestedBranch.BranchName%></td>
          <td><%=request.preference%></td>
          <%if(request.requestedBranch.Accepted == false){%>
          <td>
          	<button type="submit" class="btn btn-primary btn-sm view-request">View Request</button>
          </td>
          <%}else{%>
          <td>
            <button type="submit" class="btn btn-success btn-sm view-request">Accepted</button>
          </td>
          <%}%>
          <td class="request-user"> 
              <img style="height:100px;
                          width:100px" src="<%=request.profileImage%>" alt="">
              <strong><%=request.fullName%></strong>
              <h3><%=request.username%></h3>
              <strong><%=request.Location%></srongt>
              <h3>Requetsed Branch : <%=request.requestedBranch.BranchName%> </h3>
              <form action="/acceptRequest/<%=request._id%>" method="POST">
               <button type="submit" class="btn btn-success btn-lg">Approve Request</button>
              </form>
          </td>
        </tr>
      <%})%>
    </tbody>
  </table>
 
    
 

