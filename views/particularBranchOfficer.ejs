<html>
  <title>PPST</title>
  <head>
     <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://fonts.googleapis.com/css?family=Nunito:900" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <link href="https://fonts.googleapis.com/css?family=Nunito:700" rel="stylesheet">
   <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <link href="https://fonts.googleapis.com/css?family=Fredoka+One" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
   <link href="https://fonts.googleapis.com/css?family=Cabin" rel="stylesheet">
   
  </head>
  
  <body>


    <!--  -->
    <div class="row">
      
      <div class="col col-xl-3 col-lg-2 col-md-3 col-sm-3 col-xs-12" style="background-color:rgba(0,0,0,0);                                                                    position: fixed;
                                                                            text-align:center;
                                                                            font-family: 'Cabin', sans-serif;
                                                                            border-right:solid 1px #ccc;
                                                                             box-shadow: 0 2px 4px 0 rgba(0,0,0,0.2);
                                                                            ">
        <div class="col col-xl-12 col-lg-12 col-md-3 col-sm-3 col-xs-12" style=";background-color:#2d2d2d;width:107%;box-shadow: 0 2px 4px 0 rgba(0,0,0,0.2);">
          <h2 style="color: white"><strong>PPTS</strong></h2>
          <p style="font-weight: lighter;font-size: 14px;color: #ccc">पालघर पोलीस  ट्रान्सफर सिस्टिम </p>
        </div>

      <button class="btn btn-primary  " type="submit" style="height: 30px;margin-top: 10px;"><strong>Request</strong></button>
    


   <div style="height:700px;overflow-y: scroll;background-color:white ;width: 106%">
       <ul class="list-group">
      <%branches.forEach(function(branch){%>
  <li class="list-group-item list-group-item-primary" style="font-weight: lighter;
  margin-right: 15px;
  margin-left: 15px;
  font-size: 20px;
  background-color:white;
  color: black;
  margin-top: 30px;
  box-shadow: 0 2px 4px 0 rgba(0,0,0,0.2);
  border-radius: 1px">
   <a style="color: black;font-size: 15px;font-weight: lighter;" href="/branch/<%=branch._id%>"><%=branch.BranchName%></a>
    <span class="badge badge-danger badge-pill"><%=branch.Members.length%></span>
  </li>
  <%})%>
</ul>
   </div>
  





</div>
     
        
      
        <div class="col col-xl-9 col-lg-10 col-md-9 col-sm-9 col-xs-12" style="background-color:;
                                                                            height:1200px;
                                                                            float:right;
                                                                            font-family: 'Cabin', sans-serif;
                                                                           ">
         
       
      
<div class="col col-xl-4 col-lg-4" style="height:100%;box-shadow: 0 2px 4px 0 rgba(0,0,0,0.2);position:fixed;top:0;left:266px">
  <img src="<%=foundBranch.BranchPhoto%>" style="height: 300px;width:100%;"><br><br>

<p style="font-family: 'Cabin', sans-serif;font-size: 40px;float: left;margin-left: 20px">
  <span style="color: grey;font-size: 20px"> Branch Name :</span>
  <strong><%=foundBranch.BranchName%></strong><br>
<span style="color: grey;font-size: 16px"> Located In :</span><span style="font-size: 25px">
  <strong><%=foundBranch.Location%></strong></span><br>
  </p>
  
  <% var splitName = foundBranch.BranchName.split("")%>
  <% var nameLength = splitName.length%>
  <% var trimmedName = foundBranch.BranchName.slice(3,nameLength+1)%>
<iframe width="100%" height="450" frameborder="0" style="border:0"
src="https://www.google.com/maps/embed/v1/search?q=<%=trimmedName%>+police+station&key=AIzaSyAZZpRYzIOkzB4TOTmDUK7IYo8073KUnLM" 
allowfullscreen></iframe>




</div>


<div class="col col-xs-8 col-lg-8" style="text-align: center;float: right;">
  
  <%foundBranch.Members.forEach(function(member){%>
            
 <div class="col col-xl-10 col-lg-10 col-md-4 col-sm-6 col-xs-12" style="float: right;">
    
    <div style="border:solid 1px #ccc;margin-top:50px;box-shadow: 0 2px 4px 0 rgba(0,0,0,0.2)">
      <div style="background: url(<%=member.profileImage%>);
     height:200px;width:50%;background-size: cover;"></div>
         <p><strong style="color:black;font-size:20px">
      <%=member.fullName%></strong></p><br>

    </div>
 
        </div> 
<%})%>



</div>

 </div>
      

</div>
        
 
<% include ./partials/footer %>

 </body>
  
</html>
 
<style>
  html, body {
    max-width: 100%;
    overflow-x: hidden;
}
</style>






